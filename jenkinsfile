//parametrized jenkins terraform pipe line to deploy image to ec2 instance 
pipeline {
    tools {
  terraform 'myterraform'
}
   parameters {
  choice choices: ['apply', 'destroy'], description: 'Do you want to apply or destroy?', name: 'action'
}


    agent any

    stages {
        stage('loading scripts for terraform') {
            steps {
                echo 'cloning repo'
                checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/itonix/DevopsprojCertification1.git']])
            }
        }
        stage('initializing terraform ') {
            steps {
                sh 'sudo terraform init'
                
            }
        }
        stage('terrafom validating') {
            steps{
            sh 'sudo terraform validate'
            }
        }
        stage('teraform provisioning changes') {
            steps{
                sh 'sudo terraform ${action} -auto-approve'
            }
        }
    }    
}
